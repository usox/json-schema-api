{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Basic message",
  "description": "Represents the basic message",
  "type": "object",
  "properties": {
    "request": {
      "type": "object",
      "properties": {
        "method": {
          "type": "string",
          "description": "The method name"
        },
        "parameter": {
          "type": "object",
          "description": "The methods parameter"
        }
      }
    }
  },
  "required": ["method", "parameter"]
}
